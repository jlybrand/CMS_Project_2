<p><a href="/users/signup">Create an Account</a></p>


<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
<% end %>

<h4>Document Files</h4>
<ul>
<% @documents.each do |file| %>
  <li>
    <a href="/<%= file %>"><%= file %></a>
    <form class="inline" action="/<%= file %>/edit" method="get">
      <button type="submit">Edit</button>
    </form>
    <form class="inline" action="/<%= file %>/delete" method="post">
      <button type="submit">Delete</button>
    </form>
    <form class="inline" action="/<%= file %>/clone" method="post">
      <button type="submit">Duplicate</button>
    </form>
    </li>
  <% end %>
</ul>

<p><a href="/new">New Document</a></p>

<h4>Image Files</h4>
<ul>
  <% @images.each do |image| %>
    <li>
      <a href="/<%= image %>"><%= image %></a>
      <form class="inline" action="/<%= image %>/edit" method="get">
        <button type="submit">Edit</button>
      </form>
      <form class="inline" action="/<%= image %>/delete" method="post">
        <button type="submit" name="delete" value="delete">Delete</button>
      </form>
    </li>
  <% end %>
</ul>

<p><a href="/image/upload">Upload Image</a></p>
